            android:textColor="#F117D4"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/random5"
            android:layout_width="272dp"
            android:layout_height="57dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="31dp"
            android:layout_toEndOf="@+id/pants3"
            android:text="Get working with our most comfortable and durable denim"
            android:textColor="#5D605F"
            android:textSize="18sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:id="@+id/pants4"
            android:src="@drawable/shorts"/>

        <TextView
            android:id="@+id/random7"
            android:layout_width="232dp"
            android:layout_height="41dp"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="10dp"
            android:layout_toEndOf="@+id/pants4"
            android:text="Shorts "
            android:textColor="#F117D4"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/random6"
            android:layout_width="272dp"
            android:layout_height="57dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="31dp"
            android:layout_toEndOf="@+id/pants4"
            android:text="Cool down with our great air flow shorts mean for the hottest of times!"
            android:textColor="#5D605F"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
